<Window x:Class="QuestCSharp.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QuestCSharp"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="75" BorderBrush="Silver" BorderThickness="2.5"
      WindowStyle="None" ResizeMode="NoResize" Title="Menu" x:Name="MenuWindow" Height="225" Width="150" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="optBtn" Width="125" Height="25" HorizontalAlignment="Center" Click="BtnClick" Grid.Row="0">Options</Button>
        <Button x:Name="strBtn" Width="125" Height="25" HorizontalAlignment="Center" Click="BtnClick" Grid.Row="1">Store</Button>
        <Button x:Name="exitBtn" Width="125" Height="25" HorizontalAlignment="Center" Click="BtnClick" Grid.Row="2">Exit</Button>
        <Button x:Name="backBtn" Width="125" Height="25" HorizontalAlignment="Center" Click="BtnClick" Grid.Row="4">Back</Button>
    </Grid>
</Window>
